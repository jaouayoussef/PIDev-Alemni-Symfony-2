{% extends 'base-back.html.twig' %}

{% block title %}
Reply
{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">All reclamations</h3>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User report</h4>
                    {{ form_start(form_rec,{'attr':{class: "forms-sample"}}) }}
                      <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        {{ form_widget(form_rec.title,{'attr':{class: "form-control", disabled: true }}) }}
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Type</label>
                        {{ form_widget(form_rec.type,{'attr':{class: "form-control", disabled: true }}) }}
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Message</label>
                        {{ form_widget(form_rec.message,{'attr':{class: "form-control", disabled: true }}) }}
                        </div>
                        <div style="display:none;">
                        {{ form_widget(form_rec.email,{'attr':{class: "form-control", type:"hidden"}}) }}
                        {{ form_widget(form_rec.name,{'attr':{class: "form-control", type:"hidden"}}) }}
                        </div>
                        {{ form_end(form_rec) }}
                        {{ form_start(form,{'attr':{class: "forms-sample"}}) }}
                      <div class="form-group">
                        <label for="exampleTextarea1">Answer</label>
                        {{ form_widget(form.answer,{'attr':{class: "form-control", rows: 4}}) }}
                      </div>
                      <div class="form-group">
                        <label>Attach a file if needed</label>
                        <span class="input-group-append">
                        {{ form_widget(form.admin_file,{'attr':{class: "file-upload-browse btn btn-primary"}}) }}
                          </span>
                      </div>
                      <button type="submit" class="btn btn-primary mr-2"> Send </button>
                    {{ form_end(form) }}
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

