<!DOCTYPE html>

<title>Promotion index</title>

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>P_Name</th>
            <th>P_Value</th>
            <th>P_Domaine</th>
            <th>P_DateB</th>
            <th>P_DateF</th>
            <th>P_Note</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.PName }}</td>
                <td>{{ promotion.PValue }}</td>
                <td>{{ promotion.PDomaine }}</td>
                <td>{{ promotion.PDateB ? promotion.PDateB|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.PDateF ? promotion.PDateF|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.PNote }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
