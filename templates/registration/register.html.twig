    <link rel="stylesheet" href="{{ asset('front/css/style.css') }}">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}"><span>Ale</span>mni</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav"
                aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a href="{{ path('home') }}" class="nav-link">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Our courses</a></li>
                <li class="nav-item"><a href="#" class="nav-link">All Tutors</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Our events</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Contact us</a></li>
                <li class="nav-item dropdown"><a href="{{ path('app_login') }}" class="nav-link">Login</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="hero-wrap js-fullheight" style="background-image: url('{{ asset('front/images/bg_1.jpg') }}');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center" data-scrollax-parent="true">
            <div class="col-md-auto ftco-animate">
                <section class="ftco-section">
                    <div class="col-md-12">
                        <div class="row no-gutters">
                            <div class="col-lg-12 col-md-12 order-md-last d-flex align-items-stretch">
                                <div class="contact-wrap w-100 p-md-5 p-4">
                                    <h3 class="mb-4">Create your account</h3>
                                    {{ form_start(registrationForm,{'attr':{'class':'contactForm'}}) }}
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name">First Name</label>
                                                    {{ form_row(registrationForm.first_name,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="email">Last Name</label>
                                                    {{ form_row(registrationForm.last_name,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name">Gender</label>
                                                    {{ form_row(registrationForm.gender,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="email">Email Address</label>
                                                    {{ form_row(registrationForm.email,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name">Password</label>
                                                    {{ form_row(registrationForm.plainPassword.first,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="email">Confirm Password</label>
                                                    {{ form_row(registrationForm.plainPassword.second,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="name">Role</label>
                                                    {{ form_errors(registrationForm.roles) }}
                                                    {{ form_row(registrationForm.roles[0],{'attr':{'class':'checkbox'}}) }}
                                                    {{ form_row(registrationForm.roles[1],{'attr':{'class':'checkbox','id':'flexCheckDefault'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="email">Profile Picture</label>
                                                    {{ form_row(registrationForm.picture,{'attr':{'class':'btn btn-outline-warning'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="label" for="email">Verification file</label>
                                                    {{ form_row(registrationForm.verificationFile,{'attr':{'class':'btn btn-outline-warning'}}) }}

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input type="submit" value="Create account"
                                                           class="btn btn-primary">
                                                </div>
                                            </div>
                                        </div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

<!-- loader -->
<div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px">
        <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/>
        <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
                stroke="#F96D00"/>
    </svg>
</div>

