{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSeance</th>
                <th>DescriptionSeance</th>
                <th>DateSeance</th>
                <th>HeureDeb</th>
                <th>HeureFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.nomSeance }}</td>
                <td>{{ seance.descriptionSeance }}</td>
                <td>{{ seance.dateSeance ? seance.dateSeance|date('Y-m-d') : '' }}</td>
                <td>{{ seance.heureDeb ? seance.heureDeb|date('H:i:s') : '' }}</td>
                <td>{{ seance.heureFin ? seance.heureFin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('seance_show', {'id': seance.id}) }}">show</a>
                    <a href="{{ path('seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seance_new') }}">Create new</a>
{% endblock %}
