{% extends 'base-front.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <div class="container-lg" style="max-width: 100%;">
        <div class="table-responsive">
            <div class="table-wrapper">

                <table class="table table-striped">
