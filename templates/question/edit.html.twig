{% extends 'base-front.html.twig' %}

{% block title %}Edit Question{% endblock %}

{% block body %}

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="wrapper">
                        <div class="row no-gutters">
                            <div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
                                <div class="contact-wrap w-100 p-md-5 p-4">
                                    <h3 class="mb-4">Update question</h3>
                                     {{ form_start(form,{'attr':{'class':'contactForm','id':'contactForm','name':'contactForm'}}) }}
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label" for="name">Question</label>
                                                    {{ form_widget(form.libelle,{'attr':{'class':'form-control','type':'text','placeholder':'Réponse 1'}}) }}

                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label" for="name">Réponse 1</label>
                                                    {{ form_widget(form.reponse1,{'attr':{'class':'form-control','type':'text','placeholder':'Réponse 1'}}) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label" for="name">Réponse 2</label>
                                                    {{ form_widget(form.reponse2,{'attr':{'class':'form-control','type':'text','placeholder':'Réponse 2'}}) }}
                                                </div>
                                            </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="label" for="name">Réponse 3</label>
                                                        {{ form_widget(form.reponse3,{'attr':{'class':'form-control','type':'text','placeholder':'Réponse 3'}}) }}
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="label" for="name">Réponse 4</label>
                                                        {{ form_widget(form.reponse4,{'attr':{'class':'form-control','type':'text','placeholder':'Réponse 4'}}) }}
                                                    </div>
                                                </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="label" for="name">Réponse correcte</label>
                                                    {{ form_widget(form.repcorrect,{'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <input href="{{ path('question_edit', {'id': question.id}) }}" type="submit" value="Update" class="btn btn-primary">
                                                    <input href="{{ path('myquestion', {'id': question.quiz.id}) }}" type="submit" value="Back to list" class="btn btn-primary" style="margin-left: 5%;">
                                                    <div class="submitting"></div>
                                                </div>

                                            </div>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <div id="map" class="bg-white"></div>
                </div>
            </div>
        </div>
    </section>
    {{ include('question/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('question_index') }}">back to list</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
