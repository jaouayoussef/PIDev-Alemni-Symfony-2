{% extends 'base-back.html.twig' %}
{% block body %}
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">Chart-js</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Charts</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> Chart-js </li>
                    </ol>
                </nav>
            </div>


            <div class="row">
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <canvas id="CodePromoOwnerChart" style="height: 250px; width: 250px;"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <canvas id="CodePromoChart" style="height: 250px; width: 250px;"></canvas>
                        </div>
                    </div>
                </div>
                </div>
        </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js" integrity="sha512-QSkVNOCYLtj73J4hbmVoOV6KVZuMluZlioC+trLpewV8qMjsWqlIQvkn1KGX2StWvPMdWGBqim1xlC8krl1EKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
 let codePromoOwner = document.getElementById("CodePromoOwnerChart");
 let CodePromoOwnerChartGraph = new Chart(codePromoOwner,{
     type : "doughnut",
     data:{
         labels: {{ codeProms|raw }},
         datasets:[{
             label: "RÃ©partition des codePromoOwner",
             data: {{ codePromoCount|raw }},

                 backgroundColor: [
                     'rgba(255, 99, 132, 0.5)',
                     'rgba(54, 162, 235, 0.5)',
                     'rgba(255, 206, 86, 0.5)',
                     'rgba(75, 192, 192, 0.5)',
                     'rgba(153, 102, 255, 0.5)',
                     'rgba(255, 159, 64, 0.5)'
                 ],
                 borderColor: [
                     'rgba(255,99,132,1)',
                     'rgba(54, 162, 235, 1)',
                     'rgba(255, 206, 86, 1)',
                     'rgba(75, 192, 192, 1)',
                     'rgba(153, 102, 255, 1)',
                     'rgba(255, 159, 64, 1)'
                 ],
             scales: {
                 yAxes: [{
                     ticks: {
                         beginAtZero: true
                     }
                 }]
             },
             legend: {
                 display: false
             },
             elements: {
                 point: {
                     radius: 0
                 }
             }
             }],


     }
 })
 let codePromo = document.getElementById("CodePromoChart");
 let CodePromoChartGraph = new Chart(codePromo,{
     type : "bar",
     data:{
         labels: {{ codePromoDate|raw }},
         datasets:[{
             label: "nombre de codePromo",
             data: {{ CodeCount|raw }},
             backgroundColor: [
                 'rgba(54, 162, 235, 0.2)',

             ],
             borderColor: [
                 'rgba(255,99,132,1)',
                 'rgba(54, 162, 235, 1)',
                 'rgba(255, 206, 86, 1)',
                 'rgba(75, 192, 192, 1)',
                 'rgba(153, 102, 255, 1)',
                 'rgba(255, 159, 64, 1)'
             ],
             scales: {
                 yAxes: [{
                     ticks: {
                         beginAtZero: true
                     }
                 }]
             },
             legend: {
                 display: false
             },
             elements: {
                 point: {
                     radius: 0
                 }
             }
         }]
     }
 })

</script>
{% endblock %}
