{% extends 'base-back.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <style>
        .canvas-container {
            display: flex;
            width: 40%;
        }
    </style>
    <div class="page-header flex-wrap">
        <h3 class="mb-0"> Hi, welcome back! <span class="pl-0 h6 pl-sm-2 text-muted d-inline-block">Your web analytics dashboard template.</span>
        </h3>
    </div>
    <div class="row">
        <div class="col-xl-3 col-lg-12 stretch-card grid-margin">
            <div class="row">
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-warning">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Nombre des admins</p>
                                    <h4 class="text-white">{{ nbAdmins }} admins
                                    </h4>
                                </div>
                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-danger">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Nombre des clients</p>
                                    <h4 class="text-white">{{ nbClients }} clients
                                    </h4>
                                </div>
                                <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                    <div class="card bg-primary">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Nombre des formateurs</p>
                                    <h4 class="text-white">{{ nbTutors }} formateurs
                                    </h4>
                                </div>
                                <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card pb-sm-3 pb-lg-0">
                    <div class="card bg-success">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Comptes bloqués</p>
                                    <h4 class="text-white">{{ nbBanned }}</h4>
                                </div>
                                <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 stretch-card grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-7">
                            <h5>Comptes Disponibles</h5>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col-sm-12">
                            <div class="flot-chart-wrapper">
                                <div id="flotChart" class="flot-chart">
                                    <div class="canvas-container" style="height:45vh; width:45vw">
                                        <canvas id="myChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-8 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body px-0 overflow-auto">
                    <h4 class="card-title pl-4">Formateurs à vérifier</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="bg-light">
                            <tr>
                                <th>Nom du Formateur</th>
                                <th>Fichier de vérification</th>
                                <th>Vérifier</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in roledUsers %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="{{ asset('uploads/user_picture/' ~ user.picture) }}" alt="image"/>
                                            <div class="table-user-name ml-3">
                                                <p class="mb-0 font-weight-medium"> {{ user.firstName }} {{ user.lastName }} </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if user.verificationFile == null %}
                                            Pas de fichier
                                        {% else %}
                                            <a type="button"
                                               href="{{ asset('uploads/user_picture/' ~ user.verificationFile) }}"
                                               class="btn btn-outline-warning">Voir</a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.isVerified == 0 %}
                                            <a type="button" href="{{ path('verify_user',{'id':user.id}) }}"
                                               class="btn btn-outline-danger">Approuver</a>
                                        {% else %}
                                            <a class="btn btn-outline-success">Vérifié</a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(roledUsers) }}
                    </div>
                    <a class="text-black mt-3 d-block pl-4" href="{{ path('all_users') }}">
                        <span class="font-weight-medium h6">Voir tout</span>
                        <i class="mdi mdi-chevron-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-black">Nouveaux Clients</h4>
                    <div class="row">
                        <div class="col-sm-12">
                            {% for user in datedUsers %}
                                <div class="row">
                                    <div class="col-4 col-sm-4">
                                        <img class="customer-img"
                                             src="{{ asset('uploads/user_picture/' ~ user.picture) }}" alt=""/>
                                    </div>
                                    <div class="col-6 col-sm-6 p-sm-0">
                                        <h6 class="mb-0">{{ user.firstName }} {{ user.lastName }}</h6>
                                    </div>
                                    <br>
                                    <br>
                                    <div class="col-2 col-sm-2 p-sm-0">
                                        <p class="text-muted font-12 mb-0">{{ user.createdAt|date('d-m-y') }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="navigation">
                            {{ knp_pagination_render(datedUsers) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>

        // chart number of users
        let ctx = document.getElementById('myChart');
        let data = {
            datasets: [{
                data: [ {{ nbAdmins }}, {{ nbClients }}, {{ nbTutors }}, {{ nbBanned }}] ,
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)',
                    'rgb(110, 36, 200)',
                ]
            }
            ],

            labels: [
                'Admins',
                'Clients',
                'Formateurs',
                'Bloqué'
            ]
        };

        let myPieChart = new Chart(ctx, {
            type: 'pie',
            data: data,
            options: {
                title: {
                    display: true,
                }
            }
        });

    </script>
{% endblock %}