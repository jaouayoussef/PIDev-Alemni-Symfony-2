{% block body %}

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 sidebar">
                    <div class="sidebar-box bg-white ftco-animate">
                        <form class="search-form">
                            <div class="form-group">
                                <input  type="search"
                                        id="search-input"
                                        placeholder="Recherchez le nom de l'événement ici..">
                                <span class="icon fa fa-search" type="button" id="search"></span>

                            </div>
                        </form>
                    </div>

                    <div class="sidebar-box bg-white p-4 ftco-animate">
                        <h3 class="heading-sidebar">Catégorie d'événement</h3>
                            <label for="option-category-3"><input type="radio" onclick="filterProduct('all')" id="option-category-3" name="vehicle" value="" checked> tout</label><br>
                            <label for="option-category-4"><input type="radio" onclick="filterProduct('Nothing')" id="option-category-4" name="vehicle" value=""> Ordinaire</label><br>
                            <label for="option-category-5"><input type="radio" onclick="filterProduct('Promo')" id="option-category-5" name="vehicle" value=""> Promotion</label><br>
                            <label for="option-category-5"><input type="radio"  onclick="filterProduct('Free')" id="option-category-5" name="vehicle" value=""> Gratuit</label><br>
                        </form>
                    </div>

                </div>
                <div class="col-lg-9">
                    <div class="row">
                        {% for event in Events %}

                            <div class="col-md-6 d-flex align-items-stretch ftco-animate">


                                    {% for pro in Promotions %}
                                    {% if pro.Event.id == event.id %}

                                        <div class="project-wrap Promo" >

                                        <a class="img" style="background-image: url({{ asset('uploads/Event/' ~ event.EPHOTO) | imagine_filter('square') }}" alt="{{ event.EName }});">
                                        <span class="price">Promotion -{{ pro.PValue}}% </span>
                                    </a>
                                        <div class="text p-4">
                                            <h3><a  class="event-name">{{ event.EName }}</a></h3>
                                            <p class="advisor">Le {{ event.EDateDebut |date('d-m-Y h:m') }}</span></p>
                                            <details>
                                                <summary style="color: #4986fc" >Details</summary>
                                                <div class="staff-detail w-100 pl-md-5">
